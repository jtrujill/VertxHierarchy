{
  "openapi": "3.0.0",
  "info": {
    "title": "Vertx Hierarchies",
    "version": "1.0.0"
  },
  "paths": {
    "/api/nodes/{parentId}": {
      "get": {
        "operationId": "getImmediateChildren",
        "x-vertx-event-bus": "hierarchy.App",
        "parameters": [
          {
            "name": "parentId",
            "in": "path",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the immediate children of the given node. If the resource doesn't exist an empty array is returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HierarchicalData"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Resource not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "deleteHierarchy",
        "x-vertx-event-bus": "hierarchy.App",
        "parameters": [
          {
            "name": "parentId",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "As long as nothing errors out this will return 204, even if the resource didn't exist"
          },
          "404": {
            "description": "Resource not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "postHierarchy",
        "x-vertx-event-bus": "hierarchy.App",
        "parameters": [
          {
            "name": "parentId",
            "in": "path",
            "required": false
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NodeInsert"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HierarchicalData"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request was invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          }
        }
      }
    },
    "/api/nodes": {
      "post": {
        "operationId": "postRootHierarchy",
        "x-vertx-event-bus": "hierarchy.App",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NodeInsert"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HierarchicalData"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Request was invalid",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "getRootChildren",
        "x-vertx-event-bus": "hierarchy.App",
        "responses": {
          "200": {
            "description": "Returns the root immediate children. If the resource doesn't exist an empty array is returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HierarchicalData"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Resource not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          },
          "500": {
            "description": "Something went wrong",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorObject"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HierarchicalData": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "parentId": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "null"
              }
            ]
          },
          "name": {
            "type": "string",
            "maxLength": 255
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "name"
        ]
      },
      "NodeInsert": {
        "type": "object",
        "properties": {
          "nodes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": "1",
              "maxLength": "255"
            },
            "minItems": 1
          }
        }
      },
      "ErrorObject": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}